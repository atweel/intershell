{
    "extends": "../../default.tsconfig.json",
    "compilerOptions": {
      "outDir": "./library/",                   
      "rootDir": "sources/",                  
      "baseUrl": "sources/",
      "paths": {
        "constants": ["constants"],
        "utils": ["utils"],
        "primitives": ["primitives"]
      },
      "plugins": [
        {
          "transform": "@zerollup/ts-transform-paths"
        }
      ]
    },
    "include": [
      "sources/**/*.ts"
    ],
    "exclude": [
      "sources/**/*/spec.ts"
    ]
  }
  