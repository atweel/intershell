{
    "compilerOptions": {
      "target": "es2018",                   
      "module": "commonjs",                 
      "declaration": true,   
      "declarationMap": true,               
      "sourceMap": true,                    
      "composite": true,                    
      "strict": true,                       
      "esModuleInterop": true,              
      "experimentalDecorators": true,       
      "emitDecoratorMetadata": true,        
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    }
  }
  